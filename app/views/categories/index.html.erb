<div class="body flex-grow-1 px-3">
  <div class="container-lg">
    <div class="car"></div>
    <div class="card mb-8">
      <div class="card-header"><strong>Tables</strong><span class="small ms-1">Categories</span></div>
      <div class="card-body">
        <div class="example">
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation"><a class="nav-link active" data-coreui-toggle="tab" href="#preview-1000" role="tab" aria-selected="true">
                <svg class="icon me-2">
                  <use xlink:href="vendors/@coreui/icons/svg/free.svg#cil-media-play"></use>
                </svg>Content</a></li>
          </ul>
          <div class="tab-content rounded-bottom">
            <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-1000">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">
                      <%= link_to "New Category", new_category_path %>
                    </th>
                  </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                      <tr>
                        <td scope="row"><%= category.id %></td>
                        <td><%= category.name %></td>
                        <td>
                          <%= link_to "Show", category_path(category) %>
                          <%= link_to "Edit", edit_category_path(category) %>
                          <%= link_to "Delete", category, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
                        </td>
                      </tr>
                    <% end %>
                </tbody>
              </table>
              <div class="text-center">
                <%= paginate @categories, theme: 'bootstrap-5' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
